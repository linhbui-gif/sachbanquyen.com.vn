mixin Modal({title, description})
  .modal.fade#myModal(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true').Modal-confirm-checkout
    .modal-dialog(role='document').modal-dialog-centered
      .modal-content
        .modal-body
          img(src="./assets/icons/question-circle.svg", alt="", srcset="")
          h4.mt-theme-15.mb-theme-15.modal-title#myModalLabel= title
          p.mb-0= description
        .modal-footer
          button.btn.btn-success(type='button') Xác nhận
          button.btn.btn-outline-gray-2(type='button', data-dismiss='modal') Hủy
