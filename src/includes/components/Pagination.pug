mixin Pagination()
  nav(aria-label='Page navigation example').mt-theme-6
    ul.pagination.justify-content-center
      li.page-item
        a.page-link(href='#' tabindex='-1')
          i.fa.fa-angle-double-left
      li.page-item
        a.page-link(href='#' tabindex='-1')
          i.fa.fa-angle-left
      li.page-item
        a.page-link(href='#') 1
      li.page-item.active
        a.page-link(href='#') 2
      li.page-item
        a.page-link(href='#') 3
      li.page-item
        a.page-link(href='#') ...
      li.page-item
        a.page-link(href='#')
          i.fa.fa-angle-right
      li.page-item
        a.page-link(href='#')
          i.fa.fa-angle-double-right
