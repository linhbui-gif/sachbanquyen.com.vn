    .BookDetail-data.mt-theme-4
        .BookDetail-data-item.d-flex.align-items-center
          span.BookDetail-data-item-text Danh mục:
          .BookDetail-data-item-category
            a(href="").mr-theme-4 Sách thiếu nhi
            a(href="").mr-theme-4 Minh họa
            a(href="") Truyện tranh
