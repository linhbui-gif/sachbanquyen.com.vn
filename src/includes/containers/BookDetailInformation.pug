    .BookDetail-table.see-more#see-more.position-relative
        table.table.table-bordered
          thead
            tr
              th(scope='col').text-center STT
              th(scope='col') Sách trong tuyển tập
              th(scope='col').text-center Thao tác
          tbody
            tr
              th(scope='row').text-center 1
              td Giáo trình lịch sử kiến trúc thế giới tập 1
              td.text-center
                a.btn.btn-outline-primary.btn-outline-xs Đọc thử
            tr
              th(scope='row').text-center 2
              td Giáo trình lịch sử kiến trúc thế giới tập 2
              td.text-center
                a.btn.btn-outline-success.btn-outline-xs Nghe thử
            each item in [3,4,5,6,7]
              tr
                th(scope='row').text-center=item
                td Giáo trình lịch sử kiến trúc thế giới tập 1
                td.text-center
                  a.btn.btn-outline-primary.btn-outline-xs Đọc thử
