mixin HeadingCard({title, isViewAll, className, isViewLabel, hasCountDown=false, classNameModify = '', isViewLink = false})
    .HeadingCard.d-flex.align-items-center(class=`${className ? className : ''}`)
      if hasCountDown
        .flash-sale-tab-header.d-flex.align-items-center.flex-wrap(class=`${classNameModify ? classNameModify : ''}`)
          .flash-sale-tab-header-title
            | Fl
            svg(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none')
              path(d='M8.16269 0.840125C8.25409 0.529338 8.53932 0.315918 8.86327 0.315918H14.7054C14.9401 0.315918 15.1605 0.428759 15.2978 0.619189C15.4351 0.809618 15.4724 1.05442 15.3982 1.27711L12.7975 9.07907H18.3567C18.6356 9.07907 18.8902 9.23795 19.0127 9.4885C19.1352 9.73905 19.1044 10.0375 18.9331 10.2577L8.70945 23.4024C8.49301 23.6807 8.10867 23.7646 7.79594 23.6019C7.48321 23.4392 7.33137 23.0763 7.43504 22.7393L10.0653 14.1909H5.21196C4.98181 14.1909 4.76513 14.0824 4.62725 13.8982C4.48937 13.7139 4.44643 13.4754 4.51137 13.2546L8.16269 0.840125Z' fill='#FFB40B')
            | sh sales
          +CountDown({className: 'flash-sale-tab-header-timeEnd', type1: true})
      else
         h3.HeadingCard-title=title
      if isViewAll
        a.HeadingCard-view(href="")
          span=isViewLabel ? isViewLabel : 'Xem tất cả'
          i.fa.fa-chevron-right.ml-theme-2
      if isViewLink
        a(href='3-Quầy-sách.html').isViewLink-item
          img(src="./assets/icons/arrow-left-single.svg" width= alt = "")
