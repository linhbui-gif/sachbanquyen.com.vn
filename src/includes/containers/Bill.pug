mixin Bill({method, success})
  section.Bill
    .Bill-shape
    .Bill-wrapper 
      .Bill-total
        span.Bill-total-title Tạm tính:
        span.Bill-total-price 
          span 311.500
          span.Bill-total-price-unit đ
      if method
        .Bill-total-voucher
          +Input({ type: 'text', label: 'Nhập mã giảm giả', icon: '../../assets/icons/ticket-discount.svg' })
          button Áp dụng
        .Bill-total
          span.Bill-total-title Giảm giá trực tiếp
          span.Bill-total-price 
            span 500
            span.Bill-total-price-unit đ
        .Bill-total
          span.Bill-total-title Giảm giá voucher
          span.Bill-total-price 
            span 1.500
            span.Bill-total-price-unit đ
        .Bill-total
          span.Bill-total-title Tiết kiệm được
          span.Bill-total-price 
            span 2.000
            span.Bill-total-price-unit đ
      .dash
      .Bill-total.big
        span.Bill-total-title Tổng tiền:
        span.Bill-total-price 
          span 311.500đ
          span.Bill-total-price-unit đ
      if success
        .Bill-total-wrapper-btns
          button.btn.btn-success.btn-bill 
            span Tôi đã chuyển khoản
            br 
            span (Kiểm tra trạng thái đơn hàng 300 giây)
          button.btn.btn-outline-gray-2.btn-bill Quay lại trang chủ
      else 
        button.btn.btn-orange-brand.btn-bill Mua hàng
      .Bill-note Bằng việc tiến hành đặt mua hàng, bạn đồng ý với Điều khoản của 
        span Công ty cổ phần Văn hóa và Bản quyền Benito
      .Bill-bottom
        img(src="data:image/svg+xml;base64,", alt="", srcset="")
